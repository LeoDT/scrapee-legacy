{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "baseUrl": "./src",
    "paths": {
      "shared": ["./src/shared"],
      "core": ["./src/core"]
    }
  },
  "include": [
    "./src/**/*",
    "scripts/graphqlPlayground.js",
    "scripts/playground.ts"
  ],
  "exclude": ["./scripts", "./postcss.config.js", "./tailwind.config.js"]
}
